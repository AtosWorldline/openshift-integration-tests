# Please make sure StrictHostKeyChecking no in /etc/ssh/ssh_config
rhc app delete perlapp --confirm || true

echo "print app"
expect << EOF
  spawn rhc app create perlapp perl-5.10 --no-git
  expect "Creating application"
  expect "done"
  expect "DNS name to be available"
  expect "done"
  expect "perlapp @ http://perlapp-ns.mymachine.me/"
  expect eof
EOF
