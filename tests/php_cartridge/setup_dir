# Please make sure StrictHostKeyChecking no in /etc/ssh/ssh_config
rhc app delete phpapp --confirm || true

echo "print app"
expect << EOF
  spawn rhc app create phpapp php-5.3 --no-git
  expect "Creating application"
  expect "done"
  expect "DNS name to be available"
  expect "done"
  expect "phpapp @ http://phpapp-ns.mymachine.me/"
  expect eof
EOF
