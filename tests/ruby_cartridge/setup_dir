# Please make sure StrictHostKeyChecking no in /etc/ssh/ssh_config
rhc app delete rubyapp --confirm || true

echo "print app"
expect << EOF
  spawn rhc app create rubyapp ruby-1.9 --no-git
  expect "Creating application"
  expect "done"
  expect "DNS name to be available"
  expect "done"
  expect "rubyapp @ http://rubyapp-ns.mymachine.me/"
  expect eof
EOF
